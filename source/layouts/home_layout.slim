      $('.intro-section').on('mousemove.parallax', function(event) {
        var pos_x = event.pageX,
            pos_y = event.pageY,
            left  = 0,
            top   = 0;

        left = container_w / 2 - pos_x;
        top  = container_h / 2 - pos_y;

        TweenMax.to(
          $x_axis,
          1,
          {
            css: {
              transform: 'translateX(' + (left * -0.3) + 'px)'
            },
            ease:Expo.easeOut,
            overwrite: 'all'
          });

        TweenMax.to(
          $y_axis,
          1,
          {
            css: {
